<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">
            
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Bills Table</h4>
                    </div>
                </div>
            </div>     
            <!-- end page title --> 

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        {{!-- <h4 class="header-title">Edit Account</h4>
                        <p class="sub-header">
                            from your Account Table.
                        </p> --}}
                        <div class="mb-2">
                            <div class="row">
                                <div class="col-12 text-sm-center form-inline">
                                     <div class="form-group">
                                        <form action="?title=">
                                            <input id="demo-input-search2" type="text" placeholder="Search"
                                            class="form-control" name="search" value="{{search}}">

												<labe for="start">Date:</label>
												<input type="date" id="start" name="chooseDate" min="2018-03" value={{chooseDate}}>
                                            <button class="-outline-success my-2 my-sm-0 btn btn-primary" type="submit">
                                                <i class="fa fa-search mr-2"></i>
                                                <span>Search</span>
                                            </button>
                                        </form>
                                        
                                    </div>                     
                                </div>
                            </div>
                            <div class="row">
                                {{#if message}}<h4 style="color: red; margin-left: 10px">{{message}}</h4>{{/if}}
                            </div>
                        </div>

                        <table id="demo-foo-addrow" class="table table-centered table-striped table-bordered mb-0 toggle-circle" data-page-size="7">
                            <thead>
                                <tr>
                                    <th>Số HĐ</th>
                                    <th>Ngày lập HĐ</th>
                                    <th>User đặt hàng</th>
                                    <th>Người nhận</th>
                                    <th>Địa chỉ</th>
                                    <th>SĐT</th>
                                    <th>Tình trạng</th>
                                    <th></th>                            
                                </tr>
                            </thead>
                            <tbody>
                                {{#each bills}}
                                <tr>
                                    <td>{{SOHD}}</td>
                                    <td>{{NGAYLAPHD}}</td>
                                    <td>{{MAKH}}</td>
                                    <td>{{NGUOINHAN}}</td>
                                    <td>{{DIACHI}}</td>
                                    <td>{{PHONE}}</td>
                                    <td>{{STATUS}}</td>
                                    <td><a name="view" href="manageBill/view/{{SOHD}}">Xem chi tiết</a></td>
                                </tr>
                                {{/each}}
                            </tbody>          
                        </table> 

                        {{!-- Pagination --}}
                         <div style="margin-top: 30px ">
                            <ul class="pagination justify-content-end">
                                {{#each Items}}
                                <li class="page-item{{#if cur}} active{{/if}}"><a class="page-link" href="/manageBill?page={{item}}">{{item}}</a></li>
                                {{/each}}
                            </ul>    
                        </div> 

                    </div> <!-- end card-box -->
                </div> <!-- end col -->
            </div>
            <!-- end row -->

    </div> <!-- content -->

</div>

