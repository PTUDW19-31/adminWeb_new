<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">
            
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Product Table</h4>
                    </div>
                </div>
            </div>     
            <!-- end page title --> 

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <h4 class="header-title">Edit Product</h4>
                        <p class="sub-header">
                            from your Product Table.
                        </p>
                        <div class="mb-2">
                            <div class="row">
                                <div class="col-10 text-sm-center form-inline">
                                    <div class="form-group mr-2">
                                        <div class="form-group">
                                            <form action="?title=">
                                                <input id="demo-input-search2" type="text" placeholder="Search"
                                                class="form-control" name="title" value="" autocomplete="off">
                                                <button class="btn btn-primary">
                                                    <i class="mdi mdi-magnify mr-2"></i>
                                                    <span>Search</span>
                                                </button>
                                            </form> 
                                        </div>                                          
                                    </div>
                                    <div class="form-group mr-2">
                                        <a href="#addProductModal" data-toggle="modal">
                                            <button class="btn btn-primary">
                                                <i class="mdi mdi-plus-circle mr-2"></i>
                                                <span>Add Product</span>
                                            </button>
                                        </a>                                             
                                    </div>
                                </div>
                                
                                <div class="col-2 text-sm-center form-inline">
                                    <div class="form-group mr-2 float-right">
                                        <a href="#addCategoryModal" data-toggle="modal">
                                            <button class="btn btn-primary">
                                                <i class="mdi mdi-plus-circle mr-2"></i>
                                                <span>Add Category</span>
                                            </button>
                                        </a>                                             
                                    </div>
                                </div>
                            </div>
                        </div>

                        <table id="demo-foo-addrow" class="table table-centered table-striped table-bordered mb-0 toggle-circle" data-page-size="7">
                            <thead>
                                <tr>
                                    <th>Edit</th>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Image</th>
                                    <th>Status</th>                                  
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td>
                                        <a href="/editProduct/update/{{MASACH}}" class="edit">
                                            <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                                        </a>
                                    </td>
                                    <td>{{MASACH}}</td>
                                    <td>{{TENSACH}}</td>
                                    <td>{{GIA}}</td>
                                    <td><a href="{{IMAGE}}" target="_blank">Image link</a></td>
                                    <td>
                                        <input type="button" id ="{{MASACH}}" class="btn btn-{{TUS}}" 
                                        data-toggle="tooltip" data-placement="right" title="Change Status"
                                        onclick="statusFunc(event)" value="{{STATUS}}">
                                        </input>
                                    </td>                          
                                </tr>
                                {{/each}}
                            </tbody>          
                        </table> 

                        {{!-- Pagination --}}
                         <div style="margin-top: 30px ">
                            <ul class="pagination justify-content-end">
                                {{#each Items}}
                                <li class="page-item{{#if cur}} active{{/if}}"><a class="page-link" href="?page={{item}}&&title={{../title}}">{{item}}</a></li>
                                {{/each}}
                            </ul>    
                        </div> 

                    </div> <!-- end card-box -->
                </div> <!-- end col -->
            </div>
            <!-- end row -->

    </div> <!-- content -->

</div>


<!-- ============================================================== -->
<!-- End Page content -->
<!-- ============================================================== -->

<!-- Form Add product -->
<div id="addProductModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" action="/editProduct/store" enctype="multipart/form-data">
                <div class="modal-header">						
                    <h4 class="modal-title">Add Product</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">				
                    <div class="form-group">
                        <label>Tên Sách</label>
                        <input type="text" class="form-control" name="name" required>
                    </div>
                    <div class="form-group">
                        <label>Giá</label>
                        <input type="number" class="form-control" name="price" required>
                    </div>
                    <div class="form-group">
                        <label>Tác giả</label>
                        <input type="text" class="form-control" name="author" required>
                    </div>
                    <div class="form-group">
                        <label>Ngày xuất bản</label>
                        <input type="date" class="form-control" name="publishDate" required>
                    </div>
                    <div class="form-group mt-3">
                        <label>Thể Loại</label>
                        <div class="container" style="border : 1px solid; ">
                            <div class="row p-2 ">
                                {{#each category}}
                                <div class="form-check col-4 align-self-center">
                                    <input class="form-check-input" type="checkbox" name="category"
                                        value="{{this.CATEGORY_ID}}" id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        {{this.NAME}}
                                    </label>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                            <label>Mô tả</label>
                            <textarea class="form-control" cols="86" rows="10" placeholder="Mô tả sách" name="description"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Ảnh</label><br>
                        <input type="file" name="image" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-success" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>
<!-- End Form add product -->

<!-- Form Add category -->
<div id="addCategoryModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content"> 
            <form method="POST" action="/editProduct/addCategory" enctype="form-data">       
                <div class="modal-header">						
                    <h4 class="modal-title">Add category</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Thể loại</label>
                        <input type="text" class="form-control" name="category" required>
                    </div>                    
                </div>            
                <div class="modal-footer">
                    <input type="submit" class="btn btn-success" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>

<form name="deleteProduct" method="POST"></form>

<script>
    function statusFunc(event){
        const formDelete = document.forms['deleteProduct'];
        const btn = event.target;
        if(btn.value == "Hiden")
        {
            formDelete.action = '/editProduct/active/' + btn.id;
            formDelete.submit();
        }
        else
        {
            formDelete.action = '/editProduct/hiden/' + btn.id;
            formDelete.submit();
        }
    }
</script>